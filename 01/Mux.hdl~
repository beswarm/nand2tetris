/** 
 * Multiplexor. If sel == 1 then out = b else out = a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here kangqh.
    And(a=b,b=sel,out=x);
    And(a=a,b=b,out=y);
    Or(a=x,b=y,out=a1);
    
    Not(in=b,out=notb);
    Not(in=sel,out=notsel);
    And(a=notb,b=notsel,out=temp);
    And(a=a,b=temp,out=b1);
    
    Or(a=a1,b=b1,out=out);
}
